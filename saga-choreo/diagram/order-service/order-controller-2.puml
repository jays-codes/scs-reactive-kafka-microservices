box "Kafka Infrastructure" #LightGray
    participant "Kafka Topic\n(order-events)" as OrderTopic
    participant "Kafka Topic\n(payment-events)" as PaymentTopic
    participant "Kafka Topic\n(inventory-events)" as InvTopic
